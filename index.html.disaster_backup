    <script>
        // Generar estadÃÂ­sticas dinÃÂ¡micas
        function updateStats() {
            // Jugadores activos (simulado)
            const activePlayers = Math.floor(Math.random() * 500) + 800;
            document.getElementById('active-players').textContent = activePlayers.toLocaleString();

            // Partidas jugadashoy (simulado)
            const gamesToday = Math.floor(Math.random() * 2000) + 5000;
            document.getElementById('games-today').textContent = gamesToday.toLocaleString();

            // RÃÂ©cord global (del leaderboard)
            const leaderboard = AuthSystem.getLeaderboard();
            const globalRecord = leaderboard.length > 0 ← leaderboard[0].highScore : 0;
            document.getElementById('global-record').textContent = globalRecord.toLocaleString();

            // Usuarios totales
            const totalUsers = leaderboard.length;
            document.getElementById('total-users').textContent = totalUsers;
        }

        // Mostrar Top 5 jugadores
        function displayTopPlayers() {
            const leaderboard = AuthSystem.getLeaderboard();
            const top5 = leaderboard.slice(0, 5);
            const container = document.getElementById('top-players-list');

            if (top5.length === 0) {
                container.innerHTML = '<p class="text-center" style="padding: 2rem; color: #888;">No hay jugadores aÃÂºn. ÃÂ¡SÃÂ© el primero!</p>';
                return;
            }

            let html = '<div style="display: grid; gap: 1rem;">';
            top5.forEach((player, index) => {
                const rankColors = ['#FFD700', '#C0C0C0', '#CD7F32', '#00d4ff', '#ffb3d9'];
                const color = rankColors[index] || '#00d4ff';
                
                html += `
                    <div style="display: flex; align-items: center; gap: 1.5rem; padding: 1rem; background: rgba(0, 153, 255, 0.05); border-radius: 10px; border: 2px solid ${color}30;">
                        <div style="font-size: 2rem; font-weight: 900; color: ${color}; min-width: 50px;">#${index + 1}</div>
                        <div style="flex: 1;">
                            <div style="font-size: 1.3rem; font-weight: 700; color: var(--neon-cyan);">${player.isBot Ã¢ÂÂ 'Ã¢ÂÂÃ¢ÂÂ ' : ''}${player.username}</div>
                            <div style="font-size: 1rem; color: #888;">${player.accuracy}% precisiÃÂ³n Ã¢ÂÂ ${player.gamesPlayed} partidas</div>
                        </div>
                        <div style="font-size: 1.5rem; font-weight: 900; color: ${color};">${player.highScore.toLocaleString()}</div>
                    </div>
                `;
            });
            html += '</div>';

            container.innerHTML = html;
        }

        // Inicializar al cargar
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                updateStats();
                displayTopPlayers();
            }, 500);

            // Actualizar stats cada 30 segundos
            setInterval(updateStats, 30000);
        });
    </script>
