{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "*": ["node_modules/*", "scripts/*"]
    }
  },
  "include": ["scripts/**/*.ts", "scripts/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
